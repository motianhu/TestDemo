<?xml version="1.0" encoding="utf-8"?>
<com.smona.app.demo.custom.CustomItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/emotion_gallery_item_shadow" >

    <FrameLayout
        android:layout_width="@dimen/custom_item_width"
        android:layout_height="@dimen/custom_item_height"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/alphaView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#000000" />
    </FrameLayout>

</com.smona.app.demo.custom.CustomItem>